# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET		/getPlaylist/:id			controllers.Application.getPlaylist(id: Int)

# Nova Playlist

GET		/nova_playlist				controllers.Application.novaPlaylist()
POST	/cria_playlist				controllers.Application.criaPlaylist()

#/:disciplinaId/:futuro/:atual		controllers.Application.mover(disciplinaId: String, futuro: Int, atual: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
